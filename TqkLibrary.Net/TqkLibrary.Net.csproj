<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net462;net5.0;net5.0-windows;net6.0;net6.0-windows</TargetFrameworks>
    <LangVersion Condition="!$(TargetFramework.StartsWith('net6'))">8.0</LangVersion>
    <LangVersion Condition="$(TargetFramework.StartsWith('net6'))">10.0</LangVersion>
    <Platforms>AnyCPU</Platforms>
    <SignAssembly>false</SignAssembly>
    <AssemblyOriginatorKeyFile>Key.pfx</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Condition="$(TargetFramework.StartsWith('net5')) Or $(TargetFramework.StartsWith('net6'))" Include="System.Drawing.Common" Version="5.0.2" />
    <PackageReference Condition="$(TargetFramework.StartsWith('net5')) Or $(TargetFramework.StartsWith('net6'))" Include="System.Net.Http" Version="4.3.4" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework.StartsWith('net4'))">
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Net" />
    <Reference Include="System.Drawing" />
    <Reference Include="System.Net.Http" />
    <Reference Include="System.Web" />
    <Reference Include="System.Web.Extensions" />
  </ItemGroup>
  
  <ItemGroup Condition="$(TargetFramework.StartsWith('net5')) Or $(TargetFramework.StartsWith('net6'))">
    
  </ItemGroup>
</Project>
